<% provide(:title, @user.name) %>

<% content_for :sidebar do %>
<li>
	<%= link_to edit_user_path(params[:id]) do %> <i class="icon-wrench"></i> Edit user details
	<% end %>
</li>
<% end %>
<div>
					
    <ul class="listview fluid">
					  <li class="bg-color-pinkDark fg-color-white">
                                            <div class="icon">
                                             <i class="icon-mail icon-small"></i>
                                            </div>
                                            <div class="data">
                                               <%= @user.name  %>
                                            </div>
                                          </li>
					  <li class="bg-color-pinkDark fg-color-white">
                                            <div class="icon">
                                             <i class="icon-mail icon-small"></i>
                                            </div>
                                            <div class="data">
                                             <h4>Email</h4>
                                             <p> <%= @user.email %> </p>
                                            </div>
                                          </li>
					  <li class="bg-color-pinkDark fg-color-white">
                                            <div class="icon">
                                             <i class="icon-mail icon-small"></i>
                                            </div>
                                            <div>PL QA link</div>
                                          </li>
					  <li class="bg-color-pinkDark fg-color-white">
                                            <div class="data">
					       <% if @user.admin?  %>
					       <p>
						       Admin
					       </p>

					       <% else  %>
					       <p>
						       User
					       </p>
					       <% end %>
                                            </div>
                                          </li>
    </ul>


</div>

<% if @user.weeks.count > 0 %>
<div class="carousel" style="height: 500px;" data-role="carousel"  data-param-direction="right" data-param-period="9999999999999" data-param-markers="on" >
	<div class="slides">
		<% @user.weeks.each do |week| %>
		<div class="slide image" >
					
					<ul class="listview fluid">
					<li class="bg-color-pinkDark fg-color-white">
                        <div class="data">
							<%= week.name  %>
							<%= week.status  %>
                        </div>
					</li>
					<li class="bg-color-pinkDark fg-color-white">
                        <div class="data">
                                               
					       
                        </div>
					</li>
					<li class="bg-color-pinkDark fg-color-white">
                                            <div class="data">
                                               
												 <% userweek =  @user.userweeks.where(week_id: week.id).first %> 
												 Userweekid#<%= userweek.id %>
												 <%= userweek.summary %>
												 
												 
                                            </div>
                                          </li>                 

 

                                        </ul>
					<div class="notices">
						<div id="Summary<%=userweek.id%>", class="bg-color-blue fg-color-white" style="height: 25px; text-align: center;"><%= userweek.summary %></div>
					</div>
						
				<%= form_for(userweek, url: {userweekId: userweek.id, userId: @user.id, controller: "userweeks", action: "updateSummary" }, remote: true) do |f| %>
													
													<% summaryId =  %[summary#{userweek.id}] %>
													<%= f.text_field  :summary, id: summaryId %>

													<%= f.submit "Update" %>
				<% end %>
				
				<ul class="listview fluid">
					<li style="height: 30px;">
                        <div class="data">
							<%= week.name  %>
							<%= week.status  %>
                        </div>
				</li>
				</ul>
				<div id="listOfJiras">
				
				<% userweek.jiras.each do |jira| %>
				
				
				<%= link_to jira.jiranumber, JIRA+jira.jiranumber, target: "_blank", class: "button default"   %>
				<% end %>
				</div>
					
					
				<%= form_for(Jira.new, url: {userId: @user.id, controller: "jiras" }, remote: true) do |f| %>
													
													<%= f.hidden_field  :userweek_id, value: userweek.id %>
													<%= f.text_field  :jiranumber, id: "jiraTextbox" %>

													<%= f.submit "Add"  %>
				<% end %>
		</div>

		<%end%>

	</div>
	<span class="control left">&#8249;</span>
	<span class="control right">&#8250;</span>
</div>

<% else %>
<div>
	<h3>This user does not have any weeks. Really?? Not possible!! </h3>
</div>
<% end %>

