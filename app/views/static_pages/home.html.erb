<h1>Home</h1>


<div class="carousel" style="height: 500px;" data-role="carousel"  data-param-direction="left" data-param-period="9999999999999" data-param-markers="on" >
                                <div class="slides">
                                    <div class="slide image" >
<% if @users.count == 0  %>
<p> No users yet...</p>
<% else %>
 <ul class="listview fluid">
<% @users.each do |user| %>
                                          <li class="bg-color-pinkDark fg-color-white">
                                            <div class="icon">
                                             <i class="icon-mail icon-small"></i>
                                            </div>
                                            <div class="data">
  <%= link_to user.name, user  %></br>
  <%= user.email  %></br>
                                            </div>
                                          </li>
<%end%>
 </ul>
<%end%>
                     </div>
                                    <div class="slide image" >
<% if @users.count == 0  %>
<p> No users yet...</p>
<% else %>
 <ul class="listview fluid">
<% @weeks.each do |week| %>
                                          <li class="bg-color-pinkDark fg-color-white">
                                            <div class="icon">
                                             <i class="icon-mail icon-small"></i>
                                            </div>
                                            <div class="data">
  <%= link_to week.name, week  %></br>
  <%= week.status  %></br>
                                            </div>
                                          </li>
<%end%>
 </ul>
<%end%>

                                    </div>


                                </div>
                                <span class="control left">&#8249;</span>
                                <span class="control right">&#8250;</span>
                            </div>
                        </div>

